#include <stdio.h>

int main()
{
    float b = 0;
    float a = 0;
    float h = 0;

    printf("Escribe la base: \n");
    scanf ("%f", &b);

    printf("Escribe la altura: \n");
    scanf ("%f", &h);

    a = (b*h)/2;
    printf("El resultado es: %.2f", a);

    return 0;


    
}
